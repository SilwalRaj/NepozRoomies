<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#F2F3F4">

    <ImageView
        android:id="@+id/ivAdList"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvAdvertise"
        android:layout_width="221dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="false"
        android:layout_alignTop="@+id/ivAdList"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/ivAdList"
        android:text="TextView"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tvAdvplus"
        android:layout_width="221dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tvAdvertise"
        android:layout_below="@+id/tvAdvertise"
        android:text="TextView"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvAdvdesc"
        android:layout_width="221dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/tvAdvertise"
        android:layout_below="@+id/tvAdvplus"
        android:text="desc"
        android:textSize="16dp" />
</android.widget.RelativeLayout>